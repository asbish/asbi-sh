{
  "env": {
    "default": {
      "presets": ["es2015", "stage-3"]
    },
    "umd": {
      "plugins": ["external-helpers"],
      "presets": [
        "minify",
        [
          "env", {
            "modules": false,
            // TODO: https://github.com/babel/babel-preset-env/issues/108
            "targets": {
              "browsers": [
                "> 1%",
                "last 2 versions",
                "Firefox ESR",
                "Opera 12.1",
                "IE 10"
              ]
            }
          }
        ]
      ]
    }
  }
}
