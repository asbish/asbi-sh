{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["DOM", "es2015", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": ".",
    "strict": true,
    "noEmitHelpers": false,
    "noUnusedLocals": true,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  }
}
