{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM", "es5", "es2015", "es2016", "es2017", "es2018"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noEmitHelpers": false,
    "noUnusedLocals": true,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  }
}
